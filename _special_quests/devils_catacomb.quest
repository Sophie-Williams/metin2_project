			d.setf("doors", d.getf("doors") + 1)
		end
		when 30103.click with pc.in_dungeon() == true and devils_catacomb.get_devil_base() == 2 and d.getf("doors") >= 11 and pc.get_vid() == d.getf("leader") begin
