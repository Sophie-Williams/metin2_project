			d.notice("You have "..devils_catacomb.get_remaining_minutes().." left.")
			d.setf("level", 7)
		end
		when base7_boss_update.server_timer begin
			if d.select(get_server_timer_arg()) then
				if d.is_unique_dead("boss") then
					d.clear_regen()
					d.purge()
					clear_server_timer("dc_time_expired", get_server_timer_arg())
					say_in_map(d.get_map_index(), color256(255, 230, 186).."The Devil큦 Catacomb:[ENTER]"..color256(196, 196, 196).."Lord Gahnasel has been killed. Finally[ENTER]peace can return to the Catacombs.[ENTER]You will now be warped back out.[ENTER]")
					server_timer("base7_update_stop_timer", 1, get_server_timer_arg())
